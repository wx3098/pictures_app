<h1>投稿一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>内容</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    
    <td><%= picture.name %></td>
    <td><%= picture.email %></td>
    <td><%= picture.content %></td>

    
     <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
     <td><%= link_to '編集する', edit_picture_path(picture.id), data: { confirm: '本当に編集してもいいですか？'} %></td>
    
     <td><%= link_to '削除する', picture_path(picture.id), method: :delete , data: { confirm: '本当に削除してもいいですか？' }  %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくコメントを投稿する', new_picture_path %>