<%= form_with(model: @picture, local: true, url: confirm_pictures_path ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="picture_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="picture_email">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div class="picture_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
 <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to '一覧画面に戻る', pictures_path %>